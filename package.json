{
  "name": "unity-hub",
  "version": "1.0.0",
  "description": "A unified API/Frontend interface",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "start-dev-backend": "nodemon src/index.ts --ignore src/frontends",
    "start-dev-emandi": "concurrently \"npm run start-dev-backend\" \"npm start --prefix src/frontends/emandi\"",
    "deploy": "npm install && npm run build",
    "prepare": "npm run install-emandi",
    "install-emandi": "npm install --prefix src/frontends/emandi",
    "build": "npm run build-all && npm run copy-all",
    "build-all": "tsc && npm run build-emandi",
    "build-emandi": "npm run build --prefix src/frontends/emandi",
    "copy-all": "npm run copy-assets && npm run copy-emandi",
    "copy-assets": "ncp src/backend/assets dist/backend/assets",
    "copy-emandi": "mkdir -p dist/frontends && ncp src/frontends/emandi/build dist/frontends/emandi",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Kishan Singh",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "concurrently": "^7.6.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "chalk": "4.1.2",
    "cors": "^2.8.5",
    "dgram": "^1.0.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "joi": "^17.12.3",
    "mongodb": "^6.5.0",
    "mqtt": "^5.5.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "puppeteer": "^22.6.5",
    "ws": "^8.18.3"
  }
}
